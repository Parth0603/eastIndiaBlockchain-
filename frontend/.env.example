# =============================================================================
# FRONTEND ENVIRONMENT CONFIGURATION
# =============================================================================

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Backend API base URL
VITE_API_URL=http://localhost:3001

# =============================================================================
# BLOCKCHAIN CONFIGURATION
# =============================================================================
# Network name (localhost, sepolia, mainnet)
VITE_NETWORK=localhost

# Smart contract addresses (updated after deployment)
VITE_ACCESS_CONTROL_ADDRESS=0x...
VITE_RELIEF_TOKEN_ADDRESS=0x...
VITE_RELIEF_DISTRIBUTION_ADDRESS=0x...

# RPC URL for direct blockchain interaction
VITE_RPC_URL=http://localhost:8545

# =============================================================================
# WALLET CONFIGURATION
# =============================================================================
# Enable MetaMask integration
VITE_ENABLE_METAMASK=true

# Enable WalletConnect
VITE_ENABLE_WALLETCONNECT=false

# WalletConnect project ID (if using WalletConnect)
VITE_WALLETCONNECT_PROJECT_ID=your-walletconnect-project-id

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Enable development mode features
VITE_DEV_MODE=true

# Enable debug logging
VITE_DEBUG=false

# Show test data and mock features
VITE_SHOW_TEST_FEATURES=true

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Block explorer base URL
VITE_BLOCK_EXPLORER_URL=https://sepolia.etherscan.io

# IPFS gateway URL
VITE_IPFS_GATEWAY=https://ipfs.io/ipfs

# =============================================================================
# UI CONFIGURATION
# =============================================================================
# Application title
VITE_APP_TITLE=Disaster Relief System

# Application description
VITE_APP_DESCRIPTION=Transparent blockchain-based disaster relief distribution

# Theme configuration
VITE_DEFAULT_THEME=light

# Enable dark mode toggle
VITE_ENABLE_DARK_MODE=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable real-time notifications
VITE_ENABLE_NOTIFICATIONS=true

# Enable transaction history
VITE_ENABLE_TRANSACTION_HISTORY=true

# Enable impact visualization
VITE_ENABLE_IMPACT_VISUALIZATION=true

# Enable fraud reporting
VITE_ENABLE_FRAUD_REPORTING=true

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================
# Google Analytics tracking ID (optional)
VITE_GA_TRACKING_ID=GA-XXXXXXXXX

# Sentry DSN for error tracking (optional)
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Enable performance monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=false