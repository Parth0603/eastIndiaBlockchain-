{
  "name": "blockchain-disaster-relief",
  "version": "1.0.0",
  "description": "Transparent disaster relief distribution system using blockchain technology and stablecoins",
  "main": "index.js",
  "scripts": {
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install && cd ..",
    "start": "node start.js",
    "start:simple": "node scripts/start-simple.js",
    "start:frontend": "node scripts/start-frontend-only.js",
    "dev": "node start.js",
    "build": "npm run build:contracts && npm run build:backend && npm run build:frontend",
    "build:contracts": "npx hardhat compile",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "test": "npm run test:contracts && npm run test:backend && npm run test:frontend",
    "test:contracts": "npx hardhat test",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "test:e2e": "npm run test:integration",
    "test:integration": "cd test && npm test",
    "checkpoint": "node scripts/final-checkpoint.js",
    "quick-check": "node scripts/quick-checkpoint.js",
    "verify": "node scripts/verify-startup.js",
    "demo-setup": "npx hardhat run scripts/demo-setup.js --network localhost",
    "deploy:local": "npx hardhat run scripts/deploy.js --network localhost",
    "deploy:sepolia": "npx hardhat run scripts/deploy-sepolia.js --network sepolia",
    "deploy:testnet": "npx hardhat run scripts/deploy.js --network sepolia",
    "lint": "npm run lint:contracts && npm run lint:backend && npm run lint:frontend",
    "lint:contracts": "npx solhint 'contracts/**/*.sol'",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "clean": "npx hardhat clean && rm -rf frontend/dist && rm -rf backend/dist",
    "seed": "cd backend && npm run seed"
  },
  "keywords": [
    "blockchain",
    "disaster-relief",
    "stablecoin",
    "ethereum",
    "smart-contracts",
    "transparency",
    "social-good",
    "hackathon"
  ],
  "author": "Your Team Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/blockchain-disaster-relief.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/blockchain-disaster-relief/issues"
  },
  "homepage": "https://github.com/yourusername/blockchain-disaster-relief#readme",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@openzeppelin/contracts": "^5.0.0",
    "hardhat": "^2.19.0",
    "jsonwebtoken": "^9.0.3",
    "mongodb-memory-server": "^11.0.1",
    "mongoose": "^9.1.1",
    "solhint": "^4.0.0",
    "supertest": "^7.1.4"
  },
  "dependencies": {
    "dotenv": "^16.3.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
